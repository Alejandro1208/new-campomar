{
    "compilerOptions": {
      "target": "ES2020", // O la versión de ECMAScript que prefieras
      "module": "CommonJS", // O "NodeNext" si estás usando módulos ES en Node.js
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "dist", // Directorio donde se guardarán los archivos JavaScript compilados
      "moduleResolution": "node", // O "node16" o "nodenext" si estás usando módulos ES en Node.js
      "sourceMap": true // Opcional: para facilitar la depuración
    },
    "include": ["src/server/**/*"], // Incluye solo los archivos del servidor
    "exclude": ["node_modules"]
  }